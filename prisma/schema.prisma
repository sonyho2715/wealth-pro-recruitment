  laborOpportunity          Decimal  @db.Decimal(14, 2) @default(0)
  pensionOpportunity        Decimal  @db.Decimal(14, 2) @default(0)  // Tax savings potential
  totalOpportunity          Decimal  @db.Decimal(14, 2) @default(0)

  // ===== PROJECTION INPUTS (user-adjustable) =====
  projectedGrowthRate       Decimal  @db.Decimal(6, 4) @default(0.05)  // 5% default
  projectedCogsImprovement  Decimal  @db.Decimal(6, 4) @default(0)
  projectedPensionIncrease  Decimal  @db.Decimal(12, 2) @default(0)

  // ===== 5-YEAR PROJECTIONS (JSON for flexibility) =====
  withoutScenario           Json?    // 5-year projection without changes
  withScenario              Json?    // 5-year projection with improvements

  // ===== INSIGHTS & RECOMMENDATIONS =====
  insights                  Json?    // Array of insight objects

  // Metadata
  calibratedAt              DateTime @default(now())
  lastRecalibrated          DateTime @default(now())

  @@index([industryId])
  @@index([healthScore])
}

