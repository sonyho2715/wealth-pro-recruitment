# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Primary database URL (with connection pooling for production)
# For Railway: Add ?pgbouncer=true&connection_limit=10 for pooling
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require&connection_limit=10"

# Direct database URL (bypasses pooler for migrations)
# Same as DATABASE_URL but without pooling params
DIRECT_DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Connection pool settings
DATABASE_CONNECTION_LIMIT="10"
DATABASE_CONNECT_TIMEOUT="10000"
DATABASE_QUERY_TIMEOUT="30000"

# ===========================================
# AUTHENTICATION
# ===========================================

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET="your-session-secret-at-least-32-chars"

# ===========================================
# APPLICATION SETTINGS
# ===========================================

NEXT_PUBLIC_APP_NAME="Wealth Pro"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# CACHING (Optional - defaults work fine)
# ===========================================

# Maximum cache entries (default: 10000)
CACHE_MAX_SIZE="10000"

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================

# Analytics
NEXT_PUBLIC_GA_ID=""

# Calendly for scheduling
NEXT_PUBLIC_CALENDLY_URL="https://calendly.com/your-recruiter/15min"

# Stripe (for subscriptions)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Resend (for emails)
RESEND_API_KEY=""

# Twilio (for SMS - per organization)
# Note: Twilio credentials are stored per-organization in the database
